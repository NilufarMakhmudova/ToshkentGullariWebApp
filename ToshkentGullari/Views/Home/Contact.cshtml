@{
    ViewBag.Title = Resources.ContactTitle;
    ViewBag.Subtitle = Resources.ContactSubtitle;
}

<div class="page-header"> 
    <h1>@ViewBag.Title</h1>       
</div>
<h5>@ViewBag.Subtitle @Resources.ContactSubtitleSmall </h5>
@model ToshkentGullari.Models.Support

<div class="row">

    <div class="col-md-6">


        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">@Resources.AddressTitle</h3>
            </div>
            <div class="panel-body">
                <address>
                    <strong>Toshkent Gullari</strong><br>
                    @Resources.AddressLine <br>
                    <abbr title="Phone">P:</abbr> + 99871 256-85-78
                    <abbr title="Phone"> P:</abbr> + 99871 252-35-25<br>
                    <abbr title="Fax">F:</abbr> + 99871 256-49-65
                    <abbr title="Email">E: </abbr>
                    <a href="mailto:info@flowery.uz"> info@flowery.uz</a>                   
                </address>
            </div>
        </div>

        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">@Resources.MapTitle</h3>
            </div>
            <div class="panel-body">
                @Html.Partial("_GoogleMaps")

            </div>
        </div>

    </div>

    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">@Resources.FormTitle</h3>
            </div>
            <div class="panel-body">
                <h5>@Resources.FormMessage</h5>


                @using (Html.BeginForm("Create", "Supports", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.Label(Resources.FormType, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DropDownListFor(model => model.Category, ToshkentGullari.Controllers.SelectListsController.GetCategoryList(), new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Category, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label(Resources.FormUserMessage, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Content, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label(Resources.FormUserName, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.CustomerName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.CustomerName, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label(Resources.FormPhone, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                            </div>
                        </div>



                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value=@Resources.FormButtonMessage class="btn btn-default" />
                            </div>
                        </div>

                    </div>
                }
</div>
            </div>

            </div>

           


            

               



            </div>
        






        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
